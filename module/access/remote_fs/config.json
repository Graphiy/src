{
  "ajxpdriver": {
    "name": "remote_fs",
    "label": "CONF_MESSAGE[Remote Server (via API)]",
    "description": "CONF_MESSAGE[Access a remote server implementing the AjaXplorer API (most commonly a remote server with another AjaXplorer installed)]",
    "xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance",
    "xsi:noNamespaceSchemaLocation": "file:../core.app/ajxp_registry.xsd",
    "client_settings": {
      "icon": "module/gcaccess.remote_fs/remote_fs_icon.png",
      "resources": {
        "i18n": {
          "namespace": "remote_fs_access",
          "path": "module/gcaccess.remote_fs/i18n"
        }
      }
    },
    "server_settings": {
      "param": [
        {
          "name": "HOST",
          "type": "string",
          "label": "CONF_MESSAGE[Host]",
          "description": "CONF_MESSAGE[Domain name or IP to the remote server, without http]",
          "mandatory": "true"
        },
        {
          "name": "URI",
          "type": "string",
          "label": "CONF_MESSAGE[Uri]",
          "description": "CONF_MESSAGE[Path of the API implementor on the remote server.]",
          "default": "/app/content.php",
          "mandatory": "true"
        },
        {
          "name": "USE_AUTH",
          "type": "boolean",
          "label": "CONF_MESSAGE[Remote Authentification]",
          "description": "CONF_MESSAGE[Whether we should authenticate to the remote server or not. If yes, will try to login as an AjaXplorer user, or with standard http auth if Http Auth URI is set.]",
          "default": "true",
          "mandatory": "true"
        },
        {
          "name": "AUTH_USER",
          "type": "string",
          "label": "CONF_MESSAGE[Login]",
          "description": "CONF_MESSAGE[Login for http authentification]",
          "mandatory": "false"
        },
        {
          "name": "AUTH_PASS",
          "type": "string",
          "label": "CONF_MESSAGE[Password]",
          "description": "CONF_MESSAGE[Password for http authentification]",
          "mandatory": "false"
        },
        {
          "name": "AUTH_URI",
          "type": "string",
          "label": "CONF_MESSAGE[Http Auth URI]",
          "description": "CONF_MESSAGE[Path to the authentication script, e.g. /app/index.php (only if you are using basic http auth)]",
          "default": "",
          "mandatory": "false"
        },
        {
          "name": "TMP_UPLOAD",
          "type": "string",
          "label": "CONF_MESSAGE[Temporary Folder]",
          "description": "CONF_MESSAGE[Temporary folder on the local server used for file uploads. For the moment, it must be placed under your app folder and you must create it and set it writeable by Apache.]",
          "default": "tmp",
          "mandatory": "true"
        },
        {
          "name": "API_CAPABILITIES",
          "type": "string",
          "label": "CONF_MESSAGE[Api Capabilities]",
          "description": "CONF_MESSAGE[AjaXplorer plugins actions supported by remote server, thus forwarded directly instead of executed locally.]",
          "default": "",
          "mandatory": "false"
        }
      ]
    },
    "registry_contributions": {
      "client_configs": {
        "template_part": {
          "ajxpId": "search_container",
          "ajxpClass": "SearchEngine",
          "ajxpOptions": "{}"
        },
        "component_config": {
          "className": "FilesList",
          "columns": {
            "switchGridMode": "filelist",
            "column": [
              {
                "messageId": "1",
                "attributeName": "ajxp_label"
              },
              {
                "messageId": "2",
                "attributeName": "filesize"
              },
              {
                "messageId": "3",
                "attributeName": "mimestring"
              },
              {
                "messageId": "4",
                "attributeName": "modiftime"
              }
            ]
          }
        }
      },
      "external_file": [
        {
          "filename": "module/gcaccess.fs/fsActions.xml",
          "include": "actions/*",
          "exclude": ""
        },
        {
          "filename": "module/gcaccess.fs/fsActions.xml",
          "include": "client_configs/*"
        },
        {
          "filename": "module/gcaccess.fs/manifest.xml",
          "include": "registry_contributions/hooks/*",
          "exclude": ""
        },
        {
          "filename": "module/gcaccess.remote_fs/additionalActions.xml",
          "include": "actions/*"
        }
      ],
      "actions": {
        "uuidAttr": "name",
        "action": {
          "name": "switch_repository",
          "post_processing": {
            "serverCallback": {
              "methodName": "resetConnectionRepository"
            }
          }
        }
      }
    },
    "class_definition": {
      "filename": "module/gcaccess.remote_fs/class.remote_fsAccessDriver.php",
      "classname": "remote_fsAccessDriver"
    },
    "dependencies": {
      "pluginClass": {
        "pluginName": "access.fs"
      }
    },
    "class_stream_wrapper": {
      "filename": "module/gcaccess.remote_fs/class.remote_fsAccessWrapper.php",
      "classname": "remote_fsAccessWrapper",
      "protocol": "ajxp.remotefs"
    }
  }
}
